datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id              String     @id @default(uuid())
  nombre          String
  email           String     @unique
  password        String
  fecha_creacion  DateTime   @default(now())
  ultima_conexion DateTime?
  tenencias       Tenencia[]
}

model Activo {
  id             String     @id @default(uuid())
  nombre         String
  tipo           String
  ticker         String?
  fecha_creacion DateTime   @default(now())
  imagen         String?
  precios        Precio[]
  tenencias      Tenencia[]
}

model Tenencia {
  id            String   @id @default(uuid())
  usuario_id    String
  activo_id     String
  cantidad      Float
  precio_compra Float
  fecha_compra  DateTime
  usuario       Usuario  @relation(fields: [usuario_id], references: [id])
  activo        Activo   @relation(fields: [activo_id], references: [id])

  @@index([usuario_id])
  @@index([activo_id])
}

model Precio {
  id         String   @id @default(uuid())
  activo_id  String
  precio_usd Float
  precio_ars Float
  fecha      DateTime
  activo     Activo   @relation(fields: [activo_id], references: [id])

  @@unique([activo_id, fecha])
  @@index([activo_id])
}

model TasaCambio {
  id           String   @id @default(uuid())
  tipo         String
  tasa_usd_ars Float
  fecha        DateTime
}
